@model IEnumerable<ProductDto>

<br /><br />
<div class="container p-4 border rounded-3 container-main-product">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-info">Product List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-action="Create" class="btn btn-outline-info p-lg-2"><i class="fas fa-plus"></i>Create New Product</a>
		</div>
	</div>
	<table class="table table-dark table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Category Name</th>
				<th>Price</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model)
			{
				<tr>
					<td>@product.Name</td>
					<td>@product.CategoryName</td>
					<td>@((product.Price).ToString("c"))</td>
					<td>
						<a asp-action="EditProduct" class="btn btn-success" asp-route-Id="">
							@product.Id
							<i class="fas fa-edit"></i>
						</a>
						<a asp-action="DeleteProduct" class="btn btn-danger" asp-route-Id="">
							@product.Id
							<i class="fas fa-trash"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>